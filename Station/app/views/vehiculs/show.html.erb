<div class="container">
  <div class="row">

    <p id="notice"><%= notice %></p>

    <p>
      <strong>Name:</strong>
      <%= @vehicul.name %>
    </p>

    <p>
      <strong>Brand:</strong>
      <%= @vehicul.brand %>
    </p>

    <p>
      <strong>Category:</strong>
      <%= @vehicul.category %>
    </p>

    <p>
      <strong>Km:</strong>
      <%= @vehicul.km %>
    </p>

    <% essence = GasType.find(@vehicul.gas_type_id) %>
    <p>
      <strong>Essence:</strong>
      <%= essence.name %>
    </p>

    <%= link_to 'Edit', edit_vehicul_path(@vehicul) %> |
    <%= link_to 'Back', vehiculs_path %>
  </div>
</div>
